source 'https://rubygems.org'

ruby '2.1.2'

gem 'rack'

gem 'sinatra'

# Reloads local server on page refresh (not default for Sinatra)
gem 'shotgun'

# Mail client
gem 'pony'

# Stores environment variables (for configuration mostly)
gem 'dotenv'

# Must install this gem and require it in your routes file 
gem 'mailchimp'

# Only need to install this gem
gem 'mailchimp-api'

# Wrapper for the mailchimp-api gem, friendlier syntax
gem 'gibbon'
